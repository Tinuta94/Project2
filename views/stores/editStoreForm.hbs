<form method="POST" action="/stores/{{store._id}}?_method=PUT">
    <label for="name">Name</label>
    <input type="text" name="name" value="{{store.name}}"/>
     
    <label>Address</label>
    <input type="text" name="Address" value="{{store.Address}}"/>

    <label>Currently Open</label>
    <input type="checkbox"  name="currentlyOpen" value="true"
    {{#if singleStore.currentlyOpen}} checked {{/if}}/>
    
    <label>Phone Number</label>
    <input type="number" name="phoneNumber" value="{{store.phoneNumber}}"/>

     <input type="submit" value="Submit changes"/>
</form>